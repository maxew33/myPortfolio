RewriteEngine on

#  Force HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://maxime-malfilatre.com/$1 [R=301,L]

# Force no-www with HTTPS
RewriteCond %{HTTP_HOST} ^www\.maxime-malfilatre\.com [NC]
RewriteRule ^(.*)$ https://maxime-malfilatre.com/$1 [R=301,L]

ErrorDocument 404 /error404.html
